@using MiPrimeraAplicacionWebConEntityFramework.Models
@model List<ClienteCLS> 
@{
    ViewBag.Title = "Index";
}

<br/>
<h2>Index</h2>
@Html.ActionLink("Agregar", "Agregar", "Cliente", null, new { @class="btn btn-primary"}) <!--Nombre del boton, despues nos envia a la accion agregar y controlador cliente-->
<table class="table table-bordered table-hover">
    <thead class="table thead-dark">
        <tr>
            <td width="10%">@Html.LabelFor(p => Model[0].iidcliente)</td>
            <td width="15%">@Html.LabelFor(p => Model[0].nombre)</td>
            <td width="70%">@Html.LabelFor(p => Model[0].NombreSexo)</td>
        </tr>
    </thead>
    <tbody class="table-striped">
        @foreach(var item in Model)
            {
        <tr>
            <td>@item.iidcliente</td>
            <td>@item.nombre</td>
            <td>@item.NombreSexo</td>
        </tr>
            }
    </tbody>
</table>
