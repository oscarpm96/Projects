@using MiPrimeraAplicacionWebConEntityFramework.Models;
@model List<MarcaCLS>
@{
    ViewBag.Title = "Index";
}

<br/>
<h2>Tabla de datos</h2>
<!--La siguiente linea agrega un link para la vista Agregar pero con estilo de boton-->
@Html.ActionLink("Agregar","Agregar","Marca",null,new {@class="btn btn-primary" })
<br />
<br/>
<table class="table table-bordered table-hover">
    <thead class="table thead-dark">
        <tr>
            <td width="10%">@Html.LabelFor(p=>Model[0].iidmarca)</td>
            <td width="15%">@Html.LabelFor(p=>Model[0].nombre)</td>
            <td width="70%">@Html.LabelFor(p=>Model[0].descripcion)</td>
            <td width="10%">Operaciones</td>
        </tr>
    </thead>
        <tbody class="table table-striped">
            @foreach(var item in Model) {
            <tr>
                <td>@item.iidmarca</td>
                <td>@item.nombre</td>
                <td>@item.descripcion</td>
                <td>
                    @Html.ActionLink(" ", "Editar", "Marca", new { id= @item.iidmarca }, new { @class = "far fa-edit btn btn-primary" })
                    @Html.ActionLink(" ", "Eliminar", "Marca", new { id= @item.iidmarca }, new { @class = "far fa-trash-alt btn btn-danger" })
                </td>
            </tr>
            }
        </tbody>
</table>
